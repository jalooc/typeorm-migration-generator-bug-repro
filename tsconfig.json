{
   "compilerOptions": {
      "lib": ["esnext"],
      "target": "es2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./lib",
      "rootDir": "./src",
      "baseUrl": ".",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "declaration": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "strictBindCallApply": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "resolveJsonModule": true,
      "esModuleInterop": true
   }
}